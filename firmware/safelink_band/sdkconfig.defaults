# NimBLE Configuration for ESP32-C3 (GATT Client)
CONFIG_BT_NIMBLE_ENABLED=y
CONFIG_BT_NIMBLE_ROLE_PERIPHERAL=n
CONFIG_BT_NIMBLE_ROLE_CENTRAL=y
CONFIG_BT_NIMBLE_ROLE_BROADCASTER=n
CONFIG_BT_NIMBLE_ROLE_OBSERVER=y

# GATT Client Configuration
CONFIG_BT_NIMBLE_SVC_GAP_DEVICE_NAME="ESP32C3_Band"
CONFIG_BT_NIMBLE_GAP_DEVICE_NAME_MAX_LEN=31

# Scanning Configuration
CONFIG_BT_NIMBLE_BLE_GATT_BLOB_TRANSFER=y
CONFIG_BT_NIMBLE_BLE_GATT_BLOB_TRANSFER_MAX_LEN=512

# Security Configuration
CONFIG_BT_NIMBLE_SM_SC_DEBUG_KEYS=y
CONFIG_BT_NIMBLE_SM_SC_LVL=0

# Memory Configuration
CONFIG_BT_NIMBLE_MEM_ALLOC_MODE_EXTERNAL=y
CONFIG_BT_NIMBLE_MEM_ALLOC_MODE_INTERNAL=n
CONFIG_BT_NIMBLE_MEM_ALLOC_MODE_CAPABLE=y

# Logging Configuration
CONFIG_BT_NIMBLE_LOG_LEVEL_INFO=y
CONFIG_BT_NIMBLE_LOG_LEVEL_DEBUG=n
CONFIG_BT_NIMBLE_LOG_LEVEL_VERBOSE=n

# Controller Configuration
CONFIG_BT_NIMBLE_CONTROLLER_TASK_STACK_SIZE=4096
CONFIG_BT_NIMBLE_CONTROLLER_TASK_PRIORITY=5

# Host Configuration
CONFIG_BT_NIMBLE_HOST_TASK_STACK_SIZE=4096
CONFIG_BT_NIMBLE_HOST_TASK_PRIORITY=5

# Disable Classic Bluetooth
CONFIG_BT_CLASSIC_ENABLED=n
CONFIG_BT_BLUEDROID_ENABLED=n

# Logging
CONFIG_LOG_DEFAULT_LEVEL_INFO=y
CONFIG_LOG_MAXIMUM_LEVEL_VERBOSE=y

# FreeRTOS
CONFIG_FREERTOS_HZ=1000

# GPIO
CONFIG_GPIO_ESP32_SUPPORT_SWITCH_SLP_PULL=y

# I2C
CONFIG_I2C_ENABLE_DEBUG_LOG=y

# ADC
CONFIG_ADC_ENABLE_DEBUG_LOG=y

# NVS Flash
CONFIG_NVS_ENCRYPTION=n 